<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerLibrosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:text="Mis Libros"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp" />

            </android.support.design.widget.AppBarLayout>

            <TextView
                android:id="@+id/added_book"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="Estos son tus libros aÃ±adidos"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Libro 1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/librosss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Titulo: Harry Potter I"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/librosss2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Autor: JK Rownling"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/librosss3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Publicacion: 1999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/librosss4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Calificacion: 4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Prestado"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Si"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:text="NO"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="Libro 2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/librosss16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Titulo: La comunidad del anillo"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/librosss17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Tolkien"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/librosss18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Publicacion: 1954"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/librosss19"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="1dp"
                android:paddingLeft="0dp"
                android:text="Calificacion: 4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Prestado"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/colorAccent"
                android:text="Si"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:text="NO"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/added_autor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="AGREGAR NUEVOS" />

            <TextView
                android:id="@+id/added_publicacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/added_calificacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>